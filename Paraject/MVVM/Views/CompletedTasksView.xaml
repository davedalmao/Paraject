<UserControl x:Class="Paraject.MVVM.Views.CompletedTasksView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Paraject.MVVM.Views"
             xmlns:enumSource="clr-namespace:Paraject.Core.Enums.EnumBinding"
             xmlns:enums="clr-namespace:Paraject.Core.Enums"
             mc:Ignorable="d"
             Width="632"
             Height="444.5"
             Background="Transparent"
             Foreground="{StaticResource MainFontColor}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <!--Task Filters-->
        <StackPanel Grid.Row="0"
                    Orientation="Horizontal">
            <!--Task Category ComboBox-->
            <ComboBox SelectedIndex="0"
                      Height="20"
                      Width="155"
                      FontSize="15"
                      Background="Transparent"
                      Style="{StaticResource ComboBoxTheme}"
                      ItemsSource="{Binding Source={enumSource:EnumBindingSource {x:Type enums:Category}}}" />

            <!--Task Type ComboBox-->
            <ComboBox SelectedIndex="0"
                      Margin="22,0"
                      Height="20"
                      Width="125"
                      FontSize="15"
                      Background="Transparent"
                      Style="{StaticResource ComboBoxTheme}"
                      ItemsSource="{Binding Source={enumSource:EnumBindingSource {x:Type enums:TaskType}}}" />
        </StackPanel>

        <!--Completed Tasks Display-->
        <ScrollViewer Style="{StaticResource ScrollbarTheme}"
                      Height="408"
                      Grid.Row="1">

        </ScrollViewer>
    </Grid>
</UserControl>
