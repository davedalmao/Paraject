<Window x:Class="Paraject.MVVM.Views.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Paraject.MVVM.Views.Windows"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="615"
        Width="940"
        WindowStyle="None"
        ResizeMode="CanResize"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        FontFamily="/UiDesign/Fonts/#Nunito"
        MouseDown="Window_MouseDown">
    <Border Background="#222529"
            CornerRadius="20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="208" />
                <ColumnDefinition Width="732" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <!--min, max, close buttons-->
                <RowDefinition Height="auto" />
                <!--logo-->
                <RowDefinition Height="auto" />
                <!--user image and name-->
                <RowDefinition Height="auto" />
                <!--separator-->
                <RowDefinition Height="auto" />
                <!--sidebar menu-->
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--Sidebar color-->
            <Border Background="#25282C"
                    Grid.Column="0"
                    Grid.Row="0"
                    CornerRadius="20,0,0,0" />
            <Border Background="#25282C"
                    Grid.Column="0"
                    Grid.Row="1" />
            <Border Background="#25282C"
                    Grid.Column="0"
                    Grid.Row="2" />
            <Border Background="#25282C"
                    Grid.Column="0"
                    Grid.Row="3" />
            <Border Background="#25282C"
                    Grid.Column="0"
                    Grid.Row="4"
                    CornerRadius="0,0,0,20" />


            <!--min, max, close buttons-->
            <StackPanel Orientation="Horizontal"
                        Grid.Column="1"
                        Grid.Row="0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="top"
                        Margin="0,20,20,0">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type Image}">
                        <Setter Property="Margin"
                                Value="20,0,0,0" />
                    </Style>
                </StackPanel.Resources>

                <Image Source="/UiDesign/Images/WindowStateButtons/min.png"
                       Width="20.37"
                       Height="20"
                       Cursor="Hand" />
                <Image Source="/UiDesign/Images/WindowStateButtons/max.png"
                       Width="20.37"
                       Height="20.37"
                       Cursor="Hand" />
                <Image Source="/UiDesign/Images/WindowStateButtons/close.png"
                       Width="20.37"
                       Height="20.37"
                       Cursor="Hand" />
            </StackPanel>

            <!--Logo-->
            <Image Source="/UiDesign/Images/Logo/parajectLogo.png"
                   Grid.Column="0"
                   Grid.Row="1"
                   Width="90.43"
                   Height="22.61"
                   VerticalAlignment="Bottom"
                   Margin="0,12,0,18.48" />


            <!--User image and User name-->
            <StackPanel  Grid.Column="0"
                         Grid.Row="2"
                         Margin="0,18.48">
                <!--User image-->
                <Ellipse Width="81.94"
                         Height="81.94"
                         Cursor="Hand"
                         Margin="0,0,0,12.5">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="/UiDesign/Images/UserImage/default.png" />
                    </Ellipse.Fill>
                </Ellipse>

                <!--Username-->
                <TextBlock Text="John Dave"
                           Height="23.21"
                           HorizontalAlignment="Center"
                           Foreground="#B8BDC1"
                           FontSize="18"
                           FontFamily="/UiDesign/Fonts/#Merriweather" />
            </StackPanel>

            <!--Separator-->
            <Border BorderBrush="#3C3F43"
                    Grid.Column="0"
                    Grid.Row="3"
                    BorderThickness="5"
                    CornerRadius="4"
                    Height="1"
                    Width="128"
                    Margin="0,32,0,28.48" />

            <!--Sidebar Menu-->
            <StackPanel Grid.Column="0"
                        Grid.Row="4"
                        HorizontalAlignment="Center">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type RadioButton}">
                        <Setter Property="Margin"
                                Value="0,0,0,18.57" />
                    </Style>
                </StackPanel.Resources>

                <!--Dashboard-->
                <RadioButton>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/UiDesign/Images/SidebarIcons/dashboard.png"
                               Width="18.57"
                               Height="18.57" />
                        <TextBlock Text="Dashboard"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                </RadioButton>

                <!--Projects-->
                <RadioButton>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/UiDesign/Images/SidebarIcons/projects.png"
                               Width="18.57"
                               Height="18.57" />
                        <TextBlock Text="Projects"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                </RadioButton>

                <!--Profile-->
                <RadioButton>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/UiDesign/Images/SidebarIcons/profile.png"
                               Width="18.57"
                               Height="18.57" />
                        <TextBlock Text="Profile" />
                    </StackPanel>
                </RadioButton>

                <!--Project Ideas-->
                <RadioButton>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/UiDesign/Images/SidebarIcons/projectIdeas.png"
                               Width="18.57"
                               Height="18.57" />
                        <TextBlock Text="Project Ideas"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                </RadioButton>

                <!--block separator for the top and bottom menus-->
                <Border Height="30" />

                <!--Settings-->
                <RadioButton>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/UiDesign/Images/SidebarIcons/settings.png"
                               Width="18.57"
                               Height="18.57" />
                        <TextBlock Text="Settings"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                </RadioButton>

                <!--Logout-->
                <RadioButton>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/UiDesign/Images/SidebarIcons/logout.png"
                               Width="18.57"
                               Height="18.57" />
                        <TextBlock Text="Logout"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                </RadioButton>
            </StackPanel>
        </Grid>
    </Border>
</Window>
