<UserControl x:Class="Paraject.MVVM.Views.TasksTodoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Paraject.MVVM.Views"
             xmlns:enumSource="clr-namespace:Paraject.Core.Enums.EnumBinding"
             xmlns:enums="clr-namespace:Paraject.Core.Enums"
             mc:Ignorable="d"
             Width="632"
             Height="444.5"
             Background="Transparent"
             Foreground="{StaticResource MainFontColor}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <!--Task Filters and a Button-->
        <DockPanel Grid.Row="0">
            <!--Task Status ComboBox-->
            <ComboBox SelectedIndex="0"
                      Height="20"
                      Width="115"
                      FontSize="15"
                      Background="Transparent"
                      Style="{StaticResource ComboBoxTheme}"
                      ItemsSource="{Binding Source={enumSource:EnumBindingSource {x:Type enums:Status}}}" />

            <!--Task Priority ComboBox-->
            <ComboBox SelectedIndex="0"
                      Height="20"
                      Width="75"
                      FontSize="15"
                      Background="Transparent"
                      Style="{StaticResource ComboBoxTheme}"
                      ItemsSource="{Binding Source={enumSource:EnumBindingSource {x:Type enums:Priority}}}" />

            <!--Task Category ComboBox-->
            <ComboBox SelectedIndex="0"
                      Height="20"
                      Width="155"
                      FontSize="15"
                      Background="Transparent"
                      Style="{StaticResource ComboBoxTheme}"
                      ItemsSource="{Binding Source={enumSource:EnumBindingSource {x:Type enums:Category}}}" />

            <!--Add New Task Button-->
            <Button Content="Add New Task"
                    Height="36"
                    Width="156"
                    Background="{StaticResource AccentColor}"
                    HorizontalAlignment="Right"
                    Tag="/UiDesign/Icons/ButtonIcons/add.svg"
                    Style="{StaticResource GeneralButtonTheme}" />
        </DockPanel>

        <!--Tasks Display-->
        <ScrollViewer Style="{StaticResource ScrollbarTheme}"
                      Height="408"
                      Grid.Row="1">

        </ScrollViewer>
    </Grid>
</UserControl>
