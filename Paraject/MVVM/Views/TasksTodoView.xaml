<UserControl x:Class="Paraject.MVVM.Views.TasksTodoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Paraject.MVVM.Views"
             mc:Ignorable="d"
             Width="632"
             Height="444.5"
             Background="Transparent">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <!--Task Filters and a Button-->
        <DockPanel Grid.Row="0">
            <!--Task Status ComboBox-->
            <ComboBox Height="20"
                      Width="105"
                      Style="{StaticResource ComboBoxTheme}" />

            <!--Task Priority ComboBox-->
            <ComboBox Margin="22,0"
                      Height="20"
                      Width="89"
                      Style="{StaticResource ComboBoxTheme}" />

            <!--Task Category ComboBox-->
            <ComboBox Height="20"
                      Width="123"
                      Style="{StaticResource ComboBoxTheme}" />

            <!--Add New Task Button-->
            <Button Content="Add New Task"
                    Height="36"
                    Width="156"
                    Background="{StaticResource AccentColor}"
                    HorizontalAlignment="Right"
                    Tag="/UiDesign/Icons/ButtonIcons/add.svg"
                    Style="{StaticResource GeneralButtonTheme}" />
        </DockPanel>

        <!--Tasks Display-->
        <ScrollViewer Style="{StaticResource ScrollbarTheme}"
                      Height="408"
                      Grid.Row="1">

        </ScrollViewer>
    </Grid>
</UserControl>
